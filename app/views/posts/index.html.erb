<%# <%= render "devise/shared/links" %>
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Body</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.body %></td>
        <td><%= post.price %></td>
        <%# <td><%= image_tag @post.picture, width: "200" if @post.picture.attached? %></td> 
        <td><%= link_to 'Show', post %></td>
         <% if user_signed_in? && current_user.id == post.user_id %> 
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% end %>

